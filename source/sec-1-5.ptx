                <row bottom="minor">
                    <cell>Salinity, ppt <m>S</m></cell>
                    <cell>8</cell>
                    <cell>12</cell>
                    <cell>20</cell></row>
                <row><cell>Freezing Temperature, <m>\degree</m> F, <m>T</m></cell>
                    <cell>31.552</cell>
                    <cell>31.328</cell>
                    <cell>30.88</cell></row>
